{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="container-fluid content fadeIn animated">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="hidden">{{@blog.title}}</h1>

			<div class="title-container">
				<h1 class="fadeInDown animated title"></h1>
			</div><!-- /.title -->

			<hr>

			<div class="col-lg-12 full-column">
				<p>A person currently residing in San Francisco and working as a code-maker.</p>
			</div><!-- /.col -->

			<div class="col-lg-12 full-column">
				<p><br>Follow him on <a href="http://twitter.com/dguilak" target="_blank" class="button twitter">Twitter</a> or whatever.</p>
			</div><!-- /.col -->

			<div class="col-lg-12">
				<h2>Work</h2>
				<hr class="tiny">
			</div><!-- /.col -->
		</div><!-- /.col -->
	</div><!-- /.row -->
</div><!-- /.featured-top -->

{{! The main content area on the homepage }}
<main id="content" class="work" role="main">
	<div class="col-sm-12 no-padding">
		{{! The tag below includes the post loop - partials/loop.hbs }}
		{{> "loop"}}
	</div><!-- /.col -->
</main>

<script>
	$(function(){
		$(".title").typed({
			strings: ["{{@blog.description}}"],
			typeSpeed: 60,
			showCursor: true,
			startDelay: 600
		});
	});
</script>